<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:Marvin.Products.UI">

    <DataTemplate x:Key="WorkplanComboBoxTemplate" DataType="ui:WorkplanViewModel">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,5,0" />
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}({0} / v{1})">
                        <Binding Path="State" />
                        <Binding Path="Version" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="RecipeTypeComboBoxTemplate" DataType="ui:RecipeTypeViewModel">
        <TextBlock Text="{Binding DisplayName}" />
    </DataTemplate>
</ResourceDictionary>
